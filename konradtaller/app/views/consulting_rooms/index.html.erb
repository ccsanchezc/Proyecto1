<h1>Consulting Rooms</h1>
<% if current_user %>
  Logged in as <%= current_user.email %>.
  
  <div class="topnav">
  <a class="active" href="/patients">Patient</a>
  <a href="/doctors">Doctor</a>
  <a href="/appoiments">Apointment</a>
  <a href="/consulting_rooms">Consulting Room</a>
  <%= link_to "Log Out", logout_path %>
</div>
<% end %>
<table>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Typeroom</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @consulting_rooms.each do |consulting_room| %>
      <tr>
        <td><%= consulting_room.name %></td>
        <td><%= consulting_room.location %></td>
        <td><%= consulting_room.typeroom %></td>
        <td><%= link_to 'Show', consulting_room %></td>
        <td><%= link_to 'Edit', edit_consulting_room_path(consulting_room) %></td>
        <td><%= link_to 'Destroy', consulting_room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

