<h1>Professions</h1>
<% if current_user %>
  Logged in as <%= current_user.email %>.
  
  <div class="topnav">
  <a class="active" href="/patients">Patient</a>
  <a href="/doctors">Doctor</a>
  <a href="/appoiments">Apointment</a>
  <a href="/consulting_rooms">Consulting Room</a>
  <%= link_to "Log Out", logout_path %>
</div>
<% end %>
<table>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @professions.each do |profession| %>
      <tr>
        <td><%= profession.name %></td>
        <td><%= link_to 'Show', profession %></td>
        <td><%= link_to 'Edit', edit_profession_path(profession) %></td>
        <td><%= link_to 'Destroy', profession, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

