<p id="notice"><%= notice %></p>

<h1>Doctors</h1>
<% if current_user %>
  Logged in as <%= current_user.email %>.
  
  <div class="topnav">
  <a class="active" href="/patients">Patient</a>
  <a href="/doctors">Doctor</a>
  <a href="/appoiments">Apointment</a>
  <a href="/consulting_rooms">Consulting Room</a>
  <%= link_to "Log Out", logout_path %>
</div>
<% end %>
<table>
  <thead>
    <tr>
      <th>Document</th>
      <th>Name</th>
      <th>Lastname</th>
      <th>Phone</th>
      <th>Profession</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @doctors.each do |doctor| %>
      <tr>
        <td><%= doctor.document %></td>
        <td><%= doctor.name %></td>
        <td><%= doctor.lastname %></td>
        <td><%= doctor.phone %></td>
        <td><%= doctor.profession_id %></td>
        <td><%= link_to 'Show', doctor %></td>
        <td><%= link_to 'Edit', edit_doctor_path(doctor) %></td>
        <td><%= link_to 'Destroy', doctor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Doctor', new_doctor_path %>
